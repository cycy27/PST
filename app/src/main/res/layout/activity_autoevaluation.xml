<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Autoevaluation"

    >


    <TextView
        android:id="@+id/date_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="152dp"
        android:text="Today's Evaluation"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/slider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.236" />

    <ImageButton
        android:id="@+id/GoBackArrow"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="260dp"
        android:layout_marginBottom="76dp"
        app:layout_constraintBottom_toTopOf="@+id/date_view"
        app:layout_constraintEnd_toStartOf="@+id/MenuPicture"
        app:srcCompat="@drawable/vec"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/MenuPicture"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="324dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintStart_toEndOf="@+id/group"
        app:srcCompat="@drawable/menu"
        tools:ignore="MissingConstraints,SpeakableTextPresentCheck" />

    <com.google.android.material.slider.Slider
        android:id="@+id/slider"
        android:layout_width="391dp"
        android:layout_height="30dp"
        android:stepSize="1"
        android:value="0"
        android:valueFrom="0"
        android:valueTo="10"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="29dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Check out all your Symptoms"
        app:layout_constraintBottom_toTopOf="@+id/radioGroup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="339dp"
        tools:ignore="MissingConstraints">


        <RadioButton
            android:id="@+id/feelfaint"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:text="Feel Faint" />

        <RadioButton
            android:id="@+id/chestpain"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Chest Pain" />

        <RadioButton
            android:id="@+id/Cough"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Cough" />

        <RadioButton
            android:id="@+id/feelstiff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Feel Stiff" />

        <RadioButton
            android:id="@+id/outofbreath"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Out of Breath?" />

        <RadioButton
            android:id="@+id/headache"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Headache" />


    </RadioGroup>

    <TextView
        android:id="@+id/othersymptoms"
        android:layout_width="0dp"
        android:layout_height="29dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Other symptoms? write theme here bellow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="541dp"
        tools:ignore="MissingConstraints" />




    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="118dp"
        android:layout_height="109dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toTopOf="@+id/slider"
        app:layout_constraintStart_toEndOf="@+id/date_view"
        app:srcCompat="@drawable/autopicture"
         />



    <TextView
        android:id="@+id/textView"
        android:layout_width="193dp"
        android:layout_height="19dp"

        android:text="Select your Level of Pain "
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="205dp" />

    <AutoCompleteTextView

        android:id="@+id/autocompleteTextView"
        android:layout_width="375dp"
        android:layout_height="62dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="584dp"
        tools:ignore="MissingConstraints" />

    <android.support.constraint.Group
        android:id="@+id/group"
        android:layout_gravity="top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="slider" />

    <include
        android:id="@+id/include"
        layout="@layout/element_bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>