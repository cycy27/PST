<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".History"
    android:id="@+id/container"
    android:paddingTop="?attr/actionBarSize">


    <!-- Add TextView to display the date -->

    <!-- Add CalendarView to display the Calendar -->


    <TextView
        android:id="@+id/date_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="140dp"
        android:text="History"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CalendarView
        android:id="@+id/calendar"
        android:layout_width="390dp"
        android:layout_height="371dp"
        android:layout_marginTop="48dp"
        app:layout_constraintBottom_toTopOf="@+id/HelpButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/date_view"
        app:layout_constraintVertical_bias="0.026"></CalendarView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_host_fragment_activity_main"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_nav_menu" />

    <ImageView
        android:id="@+id/BloodPicture"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toTopOf="@+id/calendar"
        app:layout_constraintStart_toEndOf="@+id/date_view"
        app:layout_constraintTop_toBottomOf="@+id/MenuPicture"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/blood" />

    <ImageButton
        android:id="@+id/GoBackArrow"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="216dp"
        android:layout_marginBottom="64dp"
        app:layout_constraintBottom_toTopOf="@+id/date_view"
        app:layout_constraintEnd_toStartOf="@+id/MenuPicture"
        app:srcCompat="@drawable/vec"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/HelpButton"
        android:layout_width="164dp"
        android:layout_height="25dp"
        app:layout_constraintBottom_toTopOf="@+id/nav_host_fragment_activity_main"
        app:layout_constraintEnd_toStartOf="@+id/AddInfo"
        app:layout_constraintHorizontal_bias="0.55"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/group_6"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/MenuPicture"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.33"
        app:layout_constraintStart_toStartOf="@+id/BloodPicture"
        app:layout_constraintTop_toTopOf="@+id/GoBackArrow"
        app:srcCompat="@drawable/menu"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/AddInfo"
        android:layout_width="69dp"
        android:layout_height="74dp"
        android:layout_marginStart="184dp"
        app:layout_constraintBottom_toTopOf="@+id/nav_host_fragment_activity_main"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/addinfo"
        tools:ignore="SpeakableTextPresentCheck" />


</android.support.constraint.ConstraintLayout>